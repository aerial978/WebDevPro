{% extends 'template/layouts/base_admin.html.twig' %}

{% block title %}Categories Edit
{% endblock %}

{% block content %}
    <main>
		<div class="container-fluid px-4">
            <div class="row mt-4">
				<div class="col-md-12">
					<div class="card">
						<div class="card-header card-header-category d-flex justify-content-between">
							<h4>Edit Category</h4>
							<a href="{{ base_path }}admin/categories/index" class="btn btn-danger">Back</a>
						</div>
						<div class="card-body">
							{% if errors %}
								<div class="alert alert-danger" role="alert">
									<ul class="errors-list">
										{% for error in errors %}
											<li>{{ error }}</li>
										{% endfor %}
									</ul>
								</div>
							{% endif %}
                            {{ editCategoryForm|raw }}
						</div>
					</div>
				</div>
            </div>
		</div>
	</main>


{% endblock %}