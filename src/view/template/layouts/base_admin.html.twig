		<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
		<!-- Script Javascript -->
		<script type="module" src="{{ base_path }}public/js/main.js"></script>
		<script>
			ClassicEditor
				.create( document.querySelector('#editor'))
				.then( editor => {
						console.log( editor );
				} )
				.catch( error => {
						console.error( error );
				} );
		</script>
	</body>
</html>
