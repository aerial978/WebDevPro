<nav class="mt-3 mb-4 {% if page == 'postlist' %}pagination-post-list{% elseif page == 'category' %}pagination-category{% elseif page == 'tag' %}pagination-tag
{% elseif page == 'user' %}pagination-user{% elseif page == 'archive' %}pagination-archive{% else %}pagination-single-post{% endif %}">
    <ul class="pagination justify-content-center">
    {% if totalPages != 1 %}
        {% if currentPage > 1 %}
            {% if page == 'postlist' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}posts?page={{ currentPage - 1 }}{% if search %}&search={{ search }}{% endif %}">Previous</a>
                </li>
            {% elseif page == 'category' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}category/{{ category.slug_category }}?page={{ currentPage - 1 }}">Previous</a>
                </li>
                {% elseif page == 'tag' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}tag/{{ tag.slug_tag }}?page={{ currentPage - 1 }}">Previous</a>
                </li>
                {% elseif page == 'user' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}user/{{ user.slug_username }}?page={{ currentPage - 1 }}">Previous</a>
                </li>
                {% elseif page == 'archive' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}archive/{{ year }}/{{ month }}?page={{ currentPage - 1 }}">Previous</a>
                </li>
            {% endif %}
        {% else %}
            {% if page %}
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            {% endif %}
        {% endif %}
        {% for i in 1..totalPages %}
            {% if page == 'postlist' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}posts?page={{ i }}{% if search %}&search={{ search }}{% endif %}">{{ i }}</a>
                </li>
            {% elseif page == 'category' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}category/{{ category.slug_category }}?page={{ i }}">{{ i }}</a>
                </li>
            {% elseif page == 'tag' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}tag/{{ tag.slug_tag }}?page={{ i }}">{{ i }}</a>
                </li>
            {% elseif page == 'user' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}user/{{ user.slug_username }}?page={{ i }}">{{ i }}</a>
                </li>
            {% elseif page == 'archive' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}archive/{{ year }}/{{ month }}?page={{ i }}">{{ i }}</a>
                </li>
            {% else %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link pagination-link" href="#" data-page="{{ i }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if currentPage < totalPages %}
            {% if page == 'postlist' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}posts?page={{ currentPage + 1 }}{% if search %}&search={{ search }}{% endif %}">Next</a>
                </li>
            {% elseif page == 'category' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}category/{{ category.slug_category }}?page={{ currentPage + 1 }}">Next</a>
                </li>
            {% elseif page == 'tag' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}tag/{{ tag.slug_tag }}?page={{ currentPage + 1 }}">Next</a>
                </li>
            {% elseif page == 'user' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}user/{{ user.slug_username }}?page={{ currentPage + 1 }}">Next</a>
                </li>
            {% elseif page == 'archive' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}archive/{{ year }}/{{ month }}?page={{ currentPage + 1 }}">Next</a>
                </li>
            {% endif %}
        {% else %}
            {% if page %}
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            {% endif %}
        {% endif %}
    {% endif %}
    </ul>
</nav>

