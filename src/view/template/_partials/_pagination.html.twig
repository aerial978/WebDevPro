<nav class="mt-3 mb-4 {% if hide is not defined %}pagination-style{% endif %}">
    <ul class="pagination justify-content-center">
        {% if totalPages != 1 %}
            {% if hide is not defined %}
                {% if _get.page > 1 %}
                    <li class="page-item">
                        <a class="page-link" id="previous-button" href="{{ base_path }}{{ url }}{{ i }}{% if search is defined %}{{ search }}{% endif %}" data-page="{{ _get.page|number_format - 1}}">Previous</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                    </li>
                {% endif %}
            {% endif %}
            {% for i in 1..totalPages %}
                <li class="page-item {% if i == _get.page %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}{{ url }}{{ i }}{% if search is defined %}{{ search }}{% endif %}" data-page="{{ i }}">{{ i }}</a>
                </li>
            {% endfor %}
            {% if hide is not defined %}
                {% if _get.page < totalPages %}
                    <li class="page-item">
                       <a class="page-link" id="next-button" href="{{ base_path }}{{ url }}{{ i }}{% if search is defined %}{{ search }}{% endif %}" data-page="{{ _get.page|number_format + 1}}">Next</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <a class="page-link">Next</a>
                    </li>
                {% endif %}
            {% endif %}
        {% endif %}
    </ul>
</nav>

