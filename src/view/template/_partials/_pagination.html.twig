<nav class="mt-3 mb-4 {% if page == 'postlist' %}pagination-post-list{% else %}pagination-single-post{% endif %}">
    <ul class="pagination justify-content-center">
    {% if totalPages != 1 %}
        {% if currentPage > 1 %}
            {% if page == 'postlist' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}posts?page={{ currentPage - 1 }}{% if search %}&search={{ search }}{% endif %}">Previous</a>
                </li>
            {% endif %}    
        {% else %}
            {% if page == 'postlist' %}
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
            {% endif %}
        {% endif %}
        {% for i in 1..totalPages %}
            {% if page == 'postlist' %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ base_path }}posts?page={{ i }}{% if search %}&search={{ search }}{% endif %}">{{ i }}</a>
                </li>
            {% else %}
                <li class="page-item {% if i == currentPage %}active{% endif %}">
                    <a class="page-link pagination-link" href="#" data-page="{{ i }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if currentPage < totalPages %}
            {% if page == 'postlist' %}
                <li class="page-item">
                    <a class="page-link" href="{{ base_path }}posts?page={{ currentPage + 1 }}{% if search %}&search={{ search }}{% endif %}">Next</a>
                </li>
            {% endif %}
        {% else %}
            {% if page == 'postlist' %}
                <li class="page-item disabled">
                    <a class="page-link">Next</a>
                </li>
            {% endif %}    
        {% endif %}
    {% endif %}
    </ul>
</nav>
