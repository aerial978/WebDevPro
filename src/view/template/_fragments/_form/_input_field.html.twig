<div class="form-group">
    <label for="{{ id }}" class="form-label">{{ label }}</label>
    <input type="{{ type }}" name="{{ name }}" id="{{ id }}" class="{{ class }}" {% if disabled %}disabled{% endif %} value="{{ value|default('') }}"/>
    {% if error is defined %}
        <div id="{{ name }}Error" class="text-danger">{{ error }}</div>
    {% endif %}
</div>